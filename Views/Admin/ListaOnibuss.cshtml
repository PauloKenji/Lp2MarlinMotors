@model IEnumerable<MarlinMotors.Models.Onibus>

@{
    ViewData["Title"] = "Ônibus na loja";
}
<h1>@ViewData["Title"]</h1>


@if(Model.Count() == 0)
{
    <p>Nenhuma ônibus cadastrado</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Placa</th>
                <th>Ano</th>
                <th>Vender</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var onibus in Model)
            {
                <tr>
                    <td>@onibus.Id</td>
                    <td>@onibus.Marca</td>
                    <td>@onibus.Modelo</td>
                    <td>@onibus.Placa</td>
                    <td>@onibus.Ano</td>
                    <td>                        
                        <a class="btn btn-success btn-sm"
                        asp-controller="Admin" 
                        asp-action="VendaOnibus" 
                        asp-route-id="@onibus.Id">Vender</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm"
                            asp-controller="Admin" 
                            asp-action="VerOnibus" 
                            asp-route-id="@onibus.Id">Ver</a>
                        <a class="btn btn-secondary btn-sm"
                            asp-controller="Admin" 
                            asp-action="AtualizarOnibus" 
                            asp-route-id="@onibus.Id">Atualizar</a>
                        <a class="btn btn-danger btn-sm"
                            asp-controller="Admin" 
                            asp-action="DeletarOnibus" 
                            asp-route-id="@onibus.Id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}