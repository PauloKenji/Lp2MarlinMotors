@model IEnumerable<MarlinMotors.Models.Caminhao>

@{
    ViewData["Title"] = "Caminhões na loja";
}
<h1>@ViewData["Title"]</h1>


@if(Model.Count() == 0)
{
    <p>Nenhum caminhão cadastrado</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Placa</th>
                <th>Ano</th>
                <th>Vender</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var caminhao in Model)
            {
                <tr>
                    <td>@caminhao.Id</td>
                    <td>@caminhao.Marca</td>
                    <td>@caminhao.Modelo</td>
                    <td>@caminhao.Placa</td>
                    <td>@caminhao.Ano</td>
                    <td>                        
                        <a class="btn btn-success btn-sm"
                        asp-controller="Admin" 
                        asp-action="VendaCaminhao" 
                        asp-route-id="@caminhao.Id">Vender</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm"
                            asp-controller="Admin" 
                            asp-action="VerCaminhao" 
                            asp-route-id="@caminhao.Id">Ver</a>
                        <a class="btn btn-secondary btn-sm"
                            asp-controller="Admin" 
                            asp-action="AtualizarCaminhao" 
                            asp-route-id="@caminhao.Id">Atualizar</a>
                        <a class="btn btn-danger btn-sm"
                            asp-controller="Admin" 
                            asp-action="DeletarCaminhao" 
                            asp-route-id="@caminhao.Id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}